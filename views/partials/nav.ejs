                const langNames = {
                  en: "English",
                  ar: "Arabic",
                  es: "Español",
                  fr: "Français",
                  de: "Deutsch",
                };

                // Get current language from cookie or default
                function getCurrentLang() {
                  const match = document.cookie.match(
                    /(^| )googtrans=\/[a-z]{2}\/([a-z]{2})/
                  );
                  if (match) return match[2];
                  return "en";
                }

                function setSelectedLangUI(lang) {
                  // Update dropdown label
                  document.getElementById("selectedLanguageName").textContent =
                    langNames[lang] || "English";
                  // Update checkmarks
                  ["en", "ar", "es", "fr", "de"].forEach(function (code) {
                    const check = document.getElementById("lang-check-" + code);
                    if (check) {
                      check.classList.toggle("d-inline", code === lang);
                      check.classList.toggle("d-none", code !== lang);
                    }
                  });
                }

                // On dropdown click
                document
                  .querySelectorAll(".language-option")
                  .forEach(function (el) {
                    el.addEventListener("click", function (e) {
                      e.preventDefault();
                      const lang = el.getAttribute("data-lang");
                      if (
                        typeof GTranslateDropdown !== "undefined" &&
                        GTranslateDropdown.switchTo
                      ) {
                        GTranslateDropdown.switchTo(lang);
                      } else {
                        // fallback: set cookie and reload
                        document.cookie = "googtrans=/en/" + lang + ";path=/";
                        location.reload();
                      }
                      setSelectedLangUI(lang);
                    });
                  });

                // Set initial UI
                setSelectedLangUI(getCurrentLang());
              });
