                showForgot.addEventListener("click", function (e) {
                  e.preventDefault();
                  loginForm.style.display = "none";
                  signupForm.style.display = "none";
                  forgotForm.style.display = "block";
                  forgotOtpForm.style.display = "none";
                  showLogin.classList.remove("btn-primary");
                  showLogin.classList.add("btn-outline-primary");
                  showSignup.classList.remove("btn-primary");
                  showSignup.classList.add("btn-outline-primary");
                });
              }
              if (backToLogin) {
                backToLogin.addEventListener("click", function (e) {
                  e.preventDefault();
                  loginForm.style.display = "block";
                  signupForm.style.display = "none";
                  forgotForm.style.display = "none";
                  forgotOtpForm.style.display = "none";
                  setActive(showLogin);
