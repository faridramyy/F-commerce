              // Show OTP form after "Send Code" is pressed
              if (sendCodeBtn) {
                sendCodeBtn.addEventListener("click", function (e) {
                  // Prevent actual form submission for demo; remove this in production
                  e.preventDefault();
                  forgotForm.style.display = "none";
                  forgotOtpForm.style.display = "block";
                });
              }

              // Resend OTP logic (optional, for demo)
              if (resendForgotOtp) {
                resendForgotOtp.addEventListener("click", function (e) {
                  e.preventDefault();
