                showLogin.classList.remove("btn-primary");
                showLogin.classList.add("btn-outline-primary");
                showSignup.classList.remove("btn-primary");
                showSignup.classList.add("btn-outline-primary");
                btn.classList.remove("btn-outline-primary");
                btn.classList.add("btn-primary");
